# Web App Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================
# Core Configuration
# =============================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# API Server URL for Socket.IO and real-time features
# Development: http://localhost:8000
# Production: https://your-api.railway.app (or your deployed API URL)
NEXT_PUBLIC_API_URL=http://localhost:8000

# JWT Secret (must match api-server)
JWT_SECRET="your-secure-jwt-secret-here"

# =============================================
# Email Service (Resend)
# =============================================

# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Email sender address (must be from a verified domain)
EMAIL_FROM="Liftout <noreply@liftout.com>"

# =============================================
# Stripe Payments
# =============================================

# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_CONNECTION_FEE=price_xxxxxxxxxxxxx

# =============================================
# OAuth Providers (Optional)
# =============================================

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# =============================================
# Admin Security
# =============================================

# Set to 'true' to enforce 2FA for admin users (always enforced in production)
ENFORCE_ADMIN_2FA=false

# =============================================
# AI Features (Optional)
# =============================================

# Anthropic API key for AI matching features
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# =============================================
# Production Example (Netlify)
# =============================================
# NEXTAUTH_URL=https://liftout.netlify.app
# NEXTAUTH_SECRET=your-production-secret
# DATABASE_URL=postgresql://...@neon.tech/neondb?sslmode=require
