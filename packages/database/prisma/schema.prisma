// Document type for categorization
enum DocumentType {
  nda
  contract
  term_sheet
  due_diligence
  team_profile
  performance_report
  compliance
  reference
  proposal
  presentation
  other
}

// Document access level
enum DocumentAccessLevel {
  public
  internal
  confidential
  restricted
  legal_only
}

// Document review status
enum DocumentReviewStatus {
  pending
  in_review
  approved
  rejected
  requires_changes
}

// Main document model
model Document {
  id                   String               @id @default(uuid())
  name                 String
  description          String?
  documentType         DocumentType         @map("document_type")
  accessLevel          DocumentAccessLevel  @default(internal) @map("access_level")
  currentVersion       Int                  @default(1) @map("current_version")

  // File metadata
  filename             String
  originalFilename     String               @map("original_filename")
  fileType             String               @map("file_type")
  mimeType             String?              @map("mime_type")
  fileSize             Int                  @map("file_size")
  storageUrl           String               @map("storage_url")
  checksum             String?

  // Ownership and associations
  uploadedById         String               @map("uploaded_by_id")
  teamId               String?              @map("team_id")
  companyId            String?              @map("company_id")
  opportunityId        String?              @map("opportunity_id")
  applicationId        String?              @map("application_id")
  conversationId       String?              @map("conversation_id")

  // Security and compliance
  isConfidential       Boolean              @default(false) @map("is_confidential")
  isLegalPrivileged    Boolean              @default(false) @map("is_legal_privileged")
  encryptionStatus     String?              @map("encryption_status")
  complianceLabels     Json                 @default("[]") @map("compliance_labels")
  retentionDate        DateTime?            @map("retention_date")

  // Review workflow
  reviewStatus         DocumentReviewStatus @default(pending) @map("review_status")
  reviewedById         String?              @map("reviewed_by_id")
  reviewedAt           DateTime?            @map("reviewed_at")
  reviewComments       String?              @map("review_comments")

  // Tracking
  downloadCount        Int                  @default(0) @map("download_count")
  viewCount            Int                  @default(0) @map("view_count")
  lastAccessedAt       DateTime?            @map("last_accessed_at")
  isArchived           Boolean              @default(false) @map("is_archived")
  archivedAt           DateTime?            @map("archived_at")

  // Metadata
  tags                 Json                 @default("[]")
  metadata             Json                 @default("{}")

  createdAt            DateTime             @default(now()) @map("created_at")
  updatedAt            DateTime             @updatedAt @map("updated_at")

  // Relations
  uploadedBy           User                 @relation("DocumentUploader", fields: [uploadedById], references: [id])
  reviewedBy           User?                @relation("DocumentReviewer", fields: [reviewedById], references: [id])
  team                 Team?                @relation(fields: [teamId], references: [id])
  company              Company?             @relation(fields: [companyId], references: [id])
  opportunity          Opportunity?         @relation(fields: [opportunityId], references: [id])
  application          TeamApplication?     @relation(fields: [applicationId], references: [id])
  versions             DocumentVersion[]
  shares               DocumentShare[]
  accessLogs           DocumentAccessLog[]

  @@index([uploadedById])
  @@index([teamId])
  @@index([companyId])
  @@index([opportunityId])
  @@index([applicationId])
  @@index([documentType])
  @@index([reviewStatus])
  @@index([createdAt])
  @@map("documents")
}

